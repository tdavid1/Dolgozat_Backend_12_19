<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Szinházak</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="navbar">
        <p><a class="navbar-brand" href="/ujcupon">Új cupon Hozzáadása</a></p>
    </div>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <td>Id:</td>
                    <td>Title:</td>
                    <td>Percetage:</td>
                    <td>Code:</td>
                </tr>
            </thead>
            <tbody>
                <% szinhazak.forEach(szinhaz => { %>
                    <tr>
                        <td><%= szinhaz.id %>&nbsp;</td> 
                        <td><%= szinhaz.title %>&nbsp;</td>  
                        <td><%= szinhaz.percentage %>&nbsp;</td> 
                        <td><%= szinhaz.code %>&nbsp;</td> 
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
